<!---css--->

body {
    text-align: center;
}
h1 {
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.4)
}

#tabuleiro {
    width: 500px;
    border: 10px solid;
    border-color: red brown tomato;
	display: flex;
	flex-wrap: wrap;
	margin: auto;
}

.quadrado {
	width: 100px;
	height: 100px;
	
}

.quadrado:nth-child(even) {
	background-color: black;
}
.quadrado:nth-child(odd) {
	background-color: lightgray;
}
